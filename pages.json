{
	"easycom": {
		// "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		"^l-(.*)": "@/components/l-$1/l-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "理论背诵"
			}
		}
	    ,{
            "path" : "pages/search/search",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "搜索",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/zonghe/zonghe",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "综合知识",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#96bf96",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#dddddd",
	    // "selectedColor": "#b4e7b4",
	    "selectedColor": "#00a894",
	    "borderStyle": "#dddddd",
	    "backgroundColor": "#ffffff",
		"height":"70px",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/tabBar/tab_remember_none.png",
	        "selectedIconPath": "static/tabBar/tab_remember.png",
	        "text": "理论背诵"
	    },{
	        "pagePath": "pages/zonghe/zonghe",
	        "iconPath": "static/tabBar/tab_zonghe_none.png",
	        "selectedIconPath": "static/tabBar/tab_zonghe.png",
	        "text": "综合知识"
	    }, {
	        "pagePath": "pages/search/search",
	        "iconPath": "static/tabBar/tab_search_none.png",
	        "selectedIconPath": "static/tabBar/tab_search.png",
	        "text": "搜索"
	    }]
	}
}
